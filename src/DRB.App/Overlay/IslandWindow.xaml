<Window x:Class="DRB.App.Overlay.IslandWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Title="DRB Island"
        ContentRendered="Window_ContentRendered"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Border x:Name="MainBorder" CornerRadius="16"
            Background="{x:Null}"
            Padding="16,10"
            BorderBrush="{x:Null}"
            BorderThickness="1"
            MinHeight="44">
        <Border.Effect>
            <DropShadowEffect BlurRadius="12" ShadowDepth="2" Opacity="0.4" Color="Black"/>
        </Border.Effect>
        <StackPanel x:Name="IslandContent" Orientation="Horizontal">
            <Border x:Name="ModeToggle"
                    Margin="0,0,4,0"
                    Background="{x:Null}"
                    CornerRadius="12"
                    Padding="4,2"
                    VerticalAlignment="Center"
                    Cursor="Hand"
                    MouseLeftButtonDown="ModeToggle_MouseLeftButtonDown">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="BtnContext" Text="Context" Foreground="White" FontFamily="Segoe UI" FontSize="13" Margin="8,4"/>
                    <TextBlock Text=" | " Foreground="#888" FontFamily="Segoe UI" FontSize="13" VerticalAlignment="Center"/>
                    <TextBlock x:Name="BtnFocus" Text="Focus" Foreground="White" FontFamily="Segoe UI" FontSize="13" Margin="8,4"/>
                </StackPanel>
            </Border>
            <Border Width="1" Background="#444" Margin="4,0" VerticalAlignment="Stretch"/>
            <Button x:Name="ClipsButton" Content="ðŸ“ Clips" Margin="4,0" Background="{x:Null}" Click="ClipsButton_Click"/>
            <Button x:Name="CaptureButton"
                    Margin="4,0"
                    Content="âº Capture 30s"
                    Background="{x:Null}"
                    Click="CaptureButton_Click"
                    ToolTip="Capture last 30 seconds&#x0a;Hotkey: Win+F10 (not yet active)"/>
            <Border Width="1" Background="#444" Margin="4,0" VerticalAlignment="Stretch"/>
            <Button x:Name="ContextViewerButton"
                    Margin="4,0"
                    Content="ðŸ–¼ Context Viewer"
                    IsEnabled="False"
                    Background="{x:Null}"
                    ToolTip="Coming soon"/>
            <Button x:Name="SettingsButton" Content="âš™ Settings" Margin="4,0" Background="{x:Null}" Click="SettingsButton_Click"/>
            <Border Width="1" Background="#444" Margin="4,0" VerticalAlignment="Stretch"/>
            <Border x:Name="PowerToggle"
                    Margin="4,0,4,0"
                    Background="{x:Null}"
                    CornerRadius="12"
                    Padding="4,2"
                    VerticalAlignment="Center"
                    Cursor="Hand"
                    MouseLeftButtonDown="PowerToggle_MouseLeftButtonDown">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="PowerOn" Text="â— ON" Foreground="White" FontFamily="Segoe UI" FontSize="13" Margin="8,4"/>
                    <TextBlock Text=" | " Foreground="#888" FontFamily="Segoe UI" FontSize="13" VerticalAlignment="Center"/>
                    <TextBlock x:Name="PowerOff" Text="OFF" Foreground="White" FontFamily="Segoe UI" FontSize="13" Margin="8,4"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</Window>
