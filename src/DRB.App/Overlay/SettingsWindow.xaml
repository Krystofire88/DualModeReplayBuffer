<Window x:Class="DRB.App.Overlay.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Settings"
        Width="420"
        Height="500"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Border x:Name="MainBorder" CornerRadius="16"
            Background="{x:Null}"
            Padding="20"
            BorderBrush="{x:Null}"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="16" ShadowDepth="4" Opacity="0.5" Color="Black"/>
        </Border.Effect>
        <Grid x:Name="RootGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,16">
                <TextBlock Text="Settings" Foreground="White" FontFamily="Segoe UI" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <Button Content="âœ•" HorizontalAlignment="Right" Padding="8,4" FontSize="14" 
                        Background="{x:Null}" Click="CloseButton_Click" ToolTip="Close (Escape)"/>
            </Grid>
            
            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <!-- Hotkeys Section -->
                    <TextBlock Text="HOTKEYS" Foreground="#AAA" FontFamily="Segoe UI" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <Border x:Name="HotkeysBorder" Background="{x:Null}" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                        <StackPanel>
                            <!-- Overlay Hotkey -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Toggle Overlay" Foreground="White" FontFamily="Segoe UI" FontSize="14"/>
                                    <TextBlock Text="Show/hide the replay overlay" Foreground="#888" FontFamily="Segoe UI" FontSize="12"/>
                                </StackPanel>
                                <Button x:Name="RecordOverlayHotkeyBtn" Content="Ctrl+Shift+F9" Width="160" Height="32" HorizontalAlignment="Right" FontSize="12" Click="RecordOverlayHotkeyBtn_Click"/>
                            </Grid>
                            
                            <!-- Capture Last 30 Hotkey -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Capture Last 30s" Foreground="White" FontFamily="Segoe UI" FontSize="14"/>
                                    <TextBlock Text="Immediately save last 30 seconds" Foreground="#888" FontFamily="Segoe UI" FontSize="12"/>
                                </StackPanel>
                                <Button x:Name="RecordCapture30HotkeyBtn" Content="Ctrl+Shift+T" Width="160" Height="32" HorizontalAlignment="Right" FontSize="12" Click="RecordCapture30HotkeyBtn_Click"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Appearance Section -->
                    <TextBlock Text="APPEARANCE" Foreground="#AAA" FontFamily="Segoe UI" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <Border x:Name="AppearanceBorder" Background="{x:Null}" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Theme" Foreground="White" FontFamily="Segoe UI" FontSize="14"/>
                                <TextBlock Text="Choose light or dark mode" Foreground="#888" FontFamily="Segoe UI" FontSize="12"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <RadioButton x:Name="ThemeDark" Content="Dark" GroupName="Theme" Foreground="White" Margin="0,0,12,0" Checked="Theme_Checked"/>
                                <RadioButton x:Name="ThemeLight" Content="Light" GroupName="Theme" Foreground="White" Checked="Theme_Checked"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Storage Section -->
                    <TextBlock Text="STORAGE" Foreground="#AAA" FontFamily="Segoe UI" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <Border x:Name="StorageBorder" Background="{x:Null}" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Clips Directory" Foreground="White" FontFamily="Segoe UI" FontSize="14"/>
                                <TextBlock x:Name="ClipsFolderTextBlock" Text="No folder selected" Foreground="#888" FontFamily="Segoe UI" FontSize="12" TextTrimming="CharacterEllipsis" MaxWidth="250"/>
                            </StackPanel>
                            <Button x:Name="BrowseButton" Grid.Column="1" Content="Browse" Background="{x:Null}" Padding="10,6" Click="BrowseButton_Click"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Footer -->
            <Grid Grid.Row="2" Margin="0,16,0,0">
                <TextBlock Text="Press Escape to close" Foreground="#666" FontFamily="Segoe UI" FontSize="11" VerticalAlignment="Center"/>
                <Button x:Name="SaveButton" Content="Save Settings" Background="#0078D4" HorizontalAlignment="Right" Click="SaveButton_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>
