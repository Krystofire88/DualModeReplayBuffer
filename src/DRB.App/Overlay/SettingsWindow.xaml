<Window x:Class="DRB.App.Overlay.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Settings"
        Width="420"
        Height="500"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Window.Resources>
        <Style x:Key="IslandButton" TargetType="Button">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A3A3A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1A1A1A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource IslandButton}">
            <Setter Property="Background" Value="#0078D4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E8AD4"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="8"/>
        </Style>
    </Window.Resources>
    <Border CornerRadius="16"
            Background="#F2202020"
            Padding="20"
            BorderBrush="#333"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="16" ShadowDepth="4" Opacity="0.5" Color="Black"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,16">
                <TextBlock Text="Settings" Foreground="White" FontFamily="Segoe UI" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <Button Content="âœ•" HorizontalAlignment="Right" Padding="8,4" FontSize="14" 
                        Style="{StaticResource IslandButton}" Click="CloseButton_Click" ToolTip="Close (Escape)"/>
            </Grid>
            
            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <!-- Hotkeys Section -->
                    <TextBlock Text="HOTKEYS" Foreground="#AAA" FontFamily="Segoe UI" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <Border Background="#2A2A2A" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                        <StackPanel>
                            <!-- Overlay Hotkey -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Toggle Overlay" Foreground="White" FontFamily="Segoe UI" FontSize="14"/>
                                    <TextBlock Text="Show/hide the replay overlay" Foreground="#888" FontFamily="Segoe UI" FontSize="12"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button x:Name="RecordOverlayHotkeyBtn" Content="Record" Style="{StaticResource IslandButton}" Padding="10,6" Margin="0,0,6,0" Click="RecordOverlayHotkeyBtn_Click"/>
                                    <Border Background="#1A1A1A" CornerRadius="4" Padding="8,6" MinWidth="100">
                                        <TextBox x:Name="OverlayHotkeyDisplay" Text="Ctrl+Shift+R" Foreground="White" Background="Transparent" BorderThickness="0" IsReadOnly="True" FontFamily="Segoe UI" FontSize="12"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Capture Last 30 Hotkey -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Capture Last 30s" Foreground="White" FontFamily="Segoe UI" FontSize="14"/>
                                    <TextBlock Text="Immediately save last 30 seconds" Foreground="#888" FontFamily="Segoe UI" FontSize="12"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button x:Name="RecordCapture30HotkeyBtn" Content="Record" Style="{StaticResource IslandButton}" Padding="10,6" Margin="0,0,6,0" Click="RecordCapture30HotkeyBtn_Click"/>
                                    <Border Background="#1A1A1A" CornerRadius="4" Padding="8,6" MinWidth="100">
                                        <TextBox x:Name="Capture30HotkeyDisplay" Text="Ctrl+Shift+T" Foreground="White" Background="Transparent" BorderThickness="0" IsReadOnly="True" FontFamily="Segoe UI" FontSize="12"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Appearance Section -->
                    <TextBlock Text="APPEARANCE" Foreground="#AAA" FontFamily="Segoe UI" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <Border Background="#2A2A2A" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Theme" Foreground="White" FontFamily="Segoe UI" FontSize="14"/>
                                <TextBlock Text="Choose light or dark mode" Foreground="#888" FontFamily="Segoe UI" FontSize="12"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <RadioButton x:Name="ThemeDark" Content="Dark" GroupName="Theme" Foreground="White" Margin="0,0,12,0" Checked="Theme_Checked"/>
                                <RadioButton x:Name="ThemeLight" Content="Light" GroupName="Theme" Foreground="White" Checked="Theme_Checked"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Storage Section -->
                    <TextBlock Text="STORAGE" Foreground="#AAA" FontFamily="Segoe UI" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <Border Background="#2A2A2A" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Clips Directory" Foreground="White" FontFamily="Segoe UI" FontSize="14"/>
                                <TextBlock x:Name="ClipsFolderTextBlock" Text="No folder selected" Foreground="#888" FontFamily="Segoe UI" FontSize="12" TextTrimming="CharacterEllipsis" MaxWidth="250"/>
                            </StackPanel>
                            <Button x:Name="BrowseButton" Grid.Column="1" Content="Browse" Style="{StaticResource IslandButton}" Padding="10,6" Click="BrowseButton_Click"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Footer -->
            <Grid Grid.Row="2" Margin="0,16,0,0">
                <TextBlock Text="Press Escape to close" Foreground="#666" FontFamily="Segoe UI" FontSize="11" VerticalAlignment="Center"/>
                <Button x:Name="SaveButton" Content="Save Settings" Style="{StaticResource AccentButton}" HorizontalAlignment="Right" Click="SaveButton_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>
